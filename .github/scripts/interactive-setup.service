[Unit]
Description=Interactive System Setup
DefaultDependencies=no
After=systemd-user-sessions.service systemd-logind.service
Before=getty.target display-manager.service
ConditionPathExists=!/var/lib/interactive-setup.done

[Service]
Type=oneshot
ExecStart=/usr/bin/interactive-setup.sh

TimeoutStartSec=0
TimeoutStopSec=0

StandardInput=tty
StandardOutput=tty
StandardError=tty
TTYPath=/dev/tty8

[Install]
WantedBy=multi-user.target
